{
    "name": "ponto",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "test": "nodemon ./bin/www"
    },
    "engines": {
        "node": "12.14.1",
        "npm": "6.13.4"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cookie-parser": "~1.4.3",
        "debug": "~2.6.9",
        "dotenv": "^6.2.0",
        "express": "~4.16.0",
        "express-flash": "0.0.2",
        "express-handlebars": "^3.1.0",
        "express-session": "^1.17.0",
        "geolocation-utils": "^1.2.2",
        "googleapis": "^46.0.0",
        "hbs": "^4.0.6",
        "http-errors": "~1.6.2",
        "luxon": "^1.21.3",
        "method-override": "^3.0.0",
        "moment": "^2.24.0",
        "mongoose": "^5.8.6",
        "morgan": "~1.9.0",
        "node-sass": "^7.0.0",
        "node-sass-middleware": "0.11.0",
        "node-schedule": "^1.3.2",
        "nodemailer": "^5.1.1"
    },
    "devDependencies": {
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-plugin-import": "^2.19.1"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "newline-per-chained-call": [
                "off"
            ],
            "max-len": [
                "error",
                {
                    "code": 200
                }
            ],
            "no-console": [
                "off"
            ],
            "prefer-arrow-callback": [
                "warn"
            ],
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "linebreak-style": [
                "off"
            ],
            "no-loop-func": [
                "off"
            ],
            "no-underscore-dangle": [
                "off"
            ]
        }
    }
}
